<Page x:Class="Notas_Unison.Pages.ListaDeNotas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Notas_Unison.Pages"
      mc:Ignorable="d"
      Title="ListaDeNotas"
      Background="#F0C1E1" Height="450" Width="800">
    <Grid>
        <DockPanel Margin="35 35 35 0"
                   Height="415">
            <TextBlock FontSize="30"
                       FontWeight="Bold"
                       DockPanel.Dock="Top"
                       Text="Lista de Notas"/>
            <DockPanel Margin="20 20 20 35">
                <ListBox x:Name="NotasListBox"
                         DockPanel.Dock="Top"
                         Height="200"
                         Width="730"
                         HorizontalAlignment="Center"/>
            </DockPanel>
            <TextBlock Text="Sandoval Millan Alejandro"
                       HorizontalAlignment="Center"
                       DockPanel.Dock="Bottom"/>
        </DockPanel>
    </Grid>
</Page>
