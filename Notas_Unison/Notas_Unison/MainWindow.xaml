<ui:FluentWindow x:Class="Notas_Unison.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notas_Unison"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:viewModel="clr-namespace:Notas_Unison.ViewModels"
        d:DataContext="{d:DesignInstance viewModel:MainWindowViewModel}"
        Height="600"
        Width="800 "
        mc:Ignorable="d">
    <StackPanel>
        <ui:TitleBar Title="Notas Unison"/>
        <ui:NavigationView x:Name="RootNavigation"
                           MenuItemsSource="{Binding NavigationItems}"
                           IsBackButtonVisible="Auto" 
                           PaneTitle="Vistas" 
                           IsPaneOpen="False" 
                           PaneDisplayMode="Top">
        </ui:NavigationView>
    </StackPanel>
</ui:FluentWindow>